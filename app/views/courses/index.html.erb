<h1>Searching for - <%= @search_term %></h1>

<table border="1">
    <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Description</th>
    </tr>
    <% @courses.each do |course| %>
        <tr>
            <td><%= image_tag(course["smallIcon"]) %></td>
            <td><%= image_tag(course["name"]) %></td>
            <td><%= image_tag(course["shortDescription"]) %></td>
        </tr>
    <% end %>
</table>
